<Package Name="xunittest" Group="com.virtuos.tnt">
  <Versions>
    <Version>1.0.1</Version>
  </Versions>

  <DirectoryStructure>
    <Item Folder="docs\manuals"/>
    <Item Folder="docs\references"/>
    <Item Folder="source\main\cpp"/>
    <Item Folder="source\main\include\xunittest"/>
    <Item Folder="source\main\include\xunittest\private"/>
    <Item Folder="source\main\resources"/>
    <Item Folder="source\test\cpp"/>
    <Item Folder="source\test\include\xunittest"/>
    <Item Folder="source\test\resources"/>
    <Item Folder="target"/>
    <Item Folder="tools"/>
  </DirectoryStructure>
  
  <Content>
    <Item Src="source\main\cpp\**\*.cpp" Dst="source\main\cpp\" />
    <Item Src="source\main\include\**\*.h" Dst="source\main\include\" />
    <Item Src="source\main\resources\**\*.*" Dst="source\main\resources\" />
    <Item Src="libs\**\*.*" Dst="libs\" />
    <Item Src="docs\**\*.*" Dst="docs\" />
    <Item Src="tools\**\*.*" Dst="Tools\" />
    <Item Src="target\outdir\${Name}_*\${Name}_*_${Platform}.lib" Dst="libs\" />
  </Content>
  
  <Project Name="xunittest" Category="Main" Language="C++" Location="source\main\cpp">
    <ProjectFile>
			<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
			  <PropertyGroup Label="Globals">
			    <ProjectGuid>{c81d02a1-2933-49e5-9dba-261317eab3be}</ProjectGuid>
			  </PropertyGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevDebug|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>TARGET_PC;WIN32;_DEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>#target\xunittest\Win32\source\main\include;$(SolutionDir)source\main\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevRelease|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>TARGET_PC;WIN32;NDEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>#target\xunittest\Win32\source\main\include;$(SolutionDir)source\main\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevFinal|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>TARGET_PC;WIN32;NDEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>#target\xunittest\Win32\source\main\include;$(SolutionDir)source\main\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>												
			  <ItemGroup>
			    <ClCompile Include="source\main\cpp\**\*.cpp" />
			  </ItemGroup>
			  <ItemGroup>
			    <ClInclude Include="source\main\include\xunittest\**\*.h" />
			  </ItemGroup>				
			</Project>
    </ProjectFile>
	</Project>

  <Project Name="xunittest_test" Category="UnitTest" Language="C++" Location="source\test\cpp">
    <ProjectFile>
			<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
			  <PropertyGroup Label="Globals">
			    <ProjectGuid>{5ea192c2-b3e8-4ccf-8c3c-6896137b5c36}</ProjectGuid>
			  </PropertyGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevDebug|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>@TARGET_PC;@WIN32;@_DEBUG;@%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>@$(SolutionDir)source\main\include;@$(SolutionDir)source\test\include;@%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevRelease|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>@TARGET_PC;@WIN32;@NDEBUG;@%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>@$(SolutionDir)source\main\include;@$(SolutionDir)source\test\include;@%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>
			  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='DevFinal|Win32'">
			    <ClCompile>
			      <ExceptionHandling>Sync</ExceptionHandling>
			      <PreprocessorDefinitions>@TARGET_PC;@WIN32;@NDEBUG;@%(PreprocessorDefinitions)</PreprocessorDefinitions>
			      <AdditionalIncludeDirectories>@$(SolutionDir)source\main\include;@$(SolutionDir)source\test\include;@%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
					</ClCompile>
				</ItemDefinitionGroup>
			  <ItemGroup>
			    <ClCompile Include="source\test\cpp\**\*.cpp" />
			  </ItemGroup>
			  <ItemGroup>
			    <ClInclude Include="source\test\include\**\*.h" />
			  </ItemGroup>				
			</Project>
    </ProjectFile>
  </Project>

</Package>


